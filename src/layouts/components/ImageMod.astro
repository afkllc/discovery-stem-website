---
// src/components/ImageMod.astro  (minimal edited version of your original)
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  // NEW: optional sizes hint for responsive selection (doesn't break anything if omitted)
  sizes?: string;
  // default loading now optional but defaulted below
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
  // NEW: flip option (none | horizontal | vertical) â€” only affects classes
  flip?: "none" | "horizontal" | "vertical";
  fit?: "cover" | "contain" | "fill" | "inside" | "outside";
}

// Destructuring Astro.props to get the component's props
let {
  src,
  alt,
  width,
  height,
  // NEW: default sizes hint (safe default; you can override per-use)
  sizes = "(max-width: 767px) 95vw, (max-width: 1023px) 80vw, 50vw",
  // NEW: default loading = lazy to avoid blocking non-hero images
  loading = "lazy",
  decoding = "async",
  class: className,
  format,
  style,
  flip = "none",
  fit = "cover",
} = Astro.props;

// KEEP ORIGINAL NORMALISATION exactly as you had it
src = `/public${src}`;

// Glob pattern to load images from the /public/images folder
const images = import.meta.glob("/public/images/**/*.{jpeg,jpg,png,gif,webp,avif}");

// KEEP ORIGINAL VALID PATH CHECK exactly as before (no change to behavior)
const isValidPath = images[src] ? true : false;

// Log a warning message in red if the image is not found
!isValidPath &&
  console.error(
    `\x1b[31mImage not found - ${src}.\x1b[0m Make sure the image is in the /public/images folder.`,
  );
---

{
  isValidPath && (
    <Image
      src={images[src]() as Promise<{ default: ImageMetadata }>}
      alt={alt}
      width={width}
      height={height}
      sizes={sizes}
      loading={loading}
      decoding={decoding}
      class={`${className ?? ""} ${flip === "horizontal" ? "img--flip-x" : ""} ${flip === "vertical" ? "img--flip-y" : ""}`}
      format={format}
      style={style}
      fit={fit}
    />
  )
}